<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomFragment.TextBasedFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        app:title=""
        app:contentInsetStart="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I-describe ang sintomas"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppins__regular"/>
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/layoutCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anong sintomas ang nakita mo?"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins__regular"
            android:textSize="14sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/green"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/green"
            app:endIconMode="clear_text"
            app:endIconTint="@color/green"
            android:hint="Halimbawa: May mga brown spot sa dahon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins__regular"
                android:textColor="@color/black"
                android:gravity="top|start"
                android:maxLines="6"
                android:lines="6"
                android:textSize="13sp"
                android:inputType="textMultiLine"
                android:justificationMode="inter_word" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saan makikita ang sintomas?"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins__regular"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/layoutChipChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupAffected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                app:singleSelection="false"
                app:selectionRequired="false"
                android:paddingTop="5dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDahon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:textColor="@color/chip_text_selector"
                    android:text="Dahon"
                    app:checkedIconTint="@color/white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    android:textAppearance="@style/CustomChipTextAppearance" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTangkay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:textColor="@color/chip_text_selector"
                    android:text="Tangkay"
                    app:checkedIconTint="@color/white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    android:textAppearance="@style/CustomChipTextAppearance" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUgat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:textColor="@color/chip_text_selector"
                    android:text="Ugat"
                    app:checkedIconTint="@color/white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    android:textAppearance="@style/CustomChipTextAppearance" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBunga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:textColor="@color/chip_text_selector"
                    android:text="Bunga"
                    app:checkedIconTint="@color/white"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    android:textAppearance="@style/CustomChipTextAppearance" />

                <TextView
                    android:id="@+id/tvChipSeasonError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins__regular"
                    android:visibility="gone" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:padding="20dp">

        <Button
            android:id="@+id/btnSearchDisease"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_solid"
            android:text="Hanapin ang sakit"
            android:fontFamily="@font/poppins__regular"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>


