<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UserActivities.AddFarmerJournal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_final"
            android:padding="10dp"
            android:layout_gravity="center"
            app:tint="@color/green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="@color/green"
            android:text="Bumalik"
            android:fontFamily="@font/poppins__regular"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Magdagdag ng Palayan"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins__semibold"
            android:gravity="center"/>

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pangalan ng Palayan"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins__regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="-20dp"
                android:layout_gravity="end"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Halimbawa: Palayan A"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                app:endIconMode="clear_text"
                app:endIconTint="@color/green"
                android:layout_marginTop="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:fontFamily="@font/poppins__regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sukat ng Palayan (Hektarya)"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="-20dp"
                android:layout_gravity="end"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Halimbawa: 1.5"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                app:endIconMode="clear_text"
                app:endIconTint="@color/green"
                android:layout_marginTop="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/poppins__regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uri ng Lupa"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="-20dp"
                android:layout_gravity="end"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutSoilType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pumili ng uri ng lupa"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/actvSoilType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:fontFamily="@font/poppins__regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uri ng Palay na Itinanim"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="-20dp"
                android:layout_gravity="end"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutRiceVariety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Halimbawa: NSIC Rc 222"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                app:endIconMode="clear_text"
                app:endIconTint="@color/green"
                android:layout_marginTop="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRiceVariety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:fontFamily="@font/poppins__regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petsa ng Pagtatanim"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/dark_red"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:fontFamily="@font/poppins__regular"
                android:layout_marginTop="-20dp"
                android:layout_gravity="end"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPlantingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pumili ng petsa"
                app:boxStrokeColor="@color/green"
                app:hintTextColor="@color/green"
                android:layout_marginTop="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPlantingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:fontFamily="@font/poppins__regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_solid"
            android:text="I-save"
            android:fontFamily="@font/poppins__regular"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>

