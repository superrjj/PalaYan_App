<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/semi_white"
    tools:context=".Adapter.RiceVarietyInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/green"
            android:elevation="4dp"
            app:title=""
            app:contentInsetStart="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="2dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins__medium"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtVarietyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtBreederOrigin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="14sp"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins__medium"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtReleaseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtBreederCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins__medium"/>

                        <TextView
                            android:id="@+id/txtYearRelease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="14sp"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins__medium"/>

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtMaxYield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="tonelada"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Karinawang Ani"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAverageYield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="tonelada"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Pinakamataas na Ani"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtMaturityDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DAYS"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bilang ng Araw"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtPlantHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CM"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taas ng Palay"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTillers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__medium"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dami ng Sanga"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins__medium"/>


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nirerekomendang Lugar"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textColor="@color/green"
                            android:fontFamily="@font/poppins__semibold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lugar:"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__semibold"/>


                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="16sp"
                                android:paddingStart="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/green"
                                android:fontFamily="@font/poppins__medium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uri ng sakahan:"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__semibold"/>


                            <TextView
                                android:id="@+id/txtEnvironment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="16sp"
                                android:paddingStart="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/green"
                                android:fontFamily="@font/poppins__medium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Panahon ng Pagtatanim:"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__semibold"/>


                            <TextView
                                android:id="@+id/txtSeason"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="16sp"
                                android:paddingStart="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/green"
                                android:fontFamily="@font/poppins__medium"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paraan ng Pagtatanim:"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins__semibold"/>


                            <TextView
                                android:id="@+id/txtPlantMethod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="####"
                                android:textSize="16sp"
                                android:paddingStart="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/green"
                                android:fontFamily="@font/poppins__medium"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>