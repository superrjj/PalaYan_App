<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/semi_white"
    tools:context=".AdminActivities.AccountDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/green"
            android:elevation="4dp"
            app:title=""
            app:contentInsetStart="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_back_final"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins__medium"/>

            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:paddingStart="7dp"
                            android:layout_toEndOf="@id/tvFullName"
                            android:fontFamily="@font/poppins__medium"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="15sp"
                            android:textColor="@color/green"
                            android:paddingStart="7dp"
                            android:layout_toEndOf="@id/tvUsername"
                            android:fontFamily="@font/poppins__medium"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:paddingStart="7dp"
                            android:layout_toEndOf="@id/tvPassword"
                            android:fontFamily="@font/poppins__medium"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Role:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:paddingStart="7dp"
                            android:layout_toEndOf="@id/tvRole"
                            android:fontFamily="@font/poppins__medium"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSecOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security 1:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtSec1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:paddingStart="7dp"
                            android:layout_toEndOf="@id/tvSecOne"
                            android:fontFamily="@font/poppins__medium"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSecTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security 2:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/poppins__semibold"/>

                        <TextView
                            android:id="@+id/txtSec2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="####"
                            android:textSize="16sp"
                            android:textColor="@color/green"
                            android:paddingStart="7dp"
                            android:layout_toEndOf="@id/tvSecTwo"
                            android:fontFamily="@font/poppins__medium"/>


                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>
</FrameLayout>