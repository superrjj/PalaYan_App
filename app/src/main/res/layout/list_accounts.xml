<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRiceVarieties"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:padding="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/semi_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:paddingHorizontal="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tvInitialName"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="JD"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/poppins__semibold" />


        </LinearLayout>

        <!-- Right: Text and icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top|start">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="########"
                            android:textColor="@color/dark_blue"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins__medium" />



                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_delete"/>

                        <ImageView
                            android:id="@+id/ivUpdate"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_edit"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#####"
                            android:layout_gravity="start"
                            android:textColor="@color/dark_blue"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins__medium" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Active"
                            android:paddingStart="10dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins__medium" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to view"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:fontFamily="@font/poppins__mediumitalic"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
