<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRiceField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <RelativeLayout
               android:id="@+id/layoutTop"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:padding="10dp"
               android:background="@color/green">

               <!-- Name -->
               <TextView
                   android:id="@+id/tvName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Palayan A"
                   android:layout_alignParentStart="true"
                   android:fontFamily="@font/poppins__semibold"
                   android:textColor="@color/white"
                   android:layout_gravity="center"
                   android:textSize="18sp" />


               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_back"
                   android:layout_gravity="center"
                   app:tint="@color/white"
                   android:rotationY="180"
                   android:layout_alignParentEnd="true" />

           </RelativeLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="16dp"
               android:background="@color/white"
               android:elevation="4dp"
               android:orientation="horizontal">


               <!-- Image -->
               <ImageView
                   android:id="@+id/ivRiceFieldImage"
                   android:layout_width="100dp"
                   android:layout_height="90dp"
                   android:scaleType="centerCrop"
                   android:background="@color/light_gray"
                   android:layout_marginBottom="8dp"
                   android:contentDescription="Rice field image"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingStart="10dp"
                  android:orientation="vertical">

                  <!-- Location -->
                  <TextView
                      android:id="@+id/tvLocation"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Tarlac City, Tarlac"
                      android:fontFamily="@font/poppins__semibold"
                      android:textColor="@color/black"
                      android:textSize="14sp"
                      android:layout_marginBottom="4dp"/>

                  <!-- Soil Type -->
                  <TextView
                      android:id="@+id/tvSoilType"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Irrigated Lowland"
                      android:fontFamily="@font/poppins__medium"
                      android:textColor="@color/black"
                      android:textSize="14sp"
                      android:layout_marginBottom="4dp"/>

                  <!-- Size -->
                  <TextView
                      android:id="@+id/tvSize"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1.5 hektarya"
                      android:fontFamily="@font/poppins__medium"
                      android:textColor="@color/black"
                      android:textSize="14sp"
                      android:layout_marginBottom="4dp"/>

              </LinearLayout>


           </LinearLayout>

       </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

