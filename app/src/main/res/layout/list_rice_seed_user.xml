<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_gray"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:id="@+id/cvUserRiceView"
    app:cardCornerRadius="15dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtVarietyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins__semibold"/>

            <TextView
                android:id="@+id/txtBreederYearRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/poppins__medium"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins__semibold"/>



            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to view"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins__mediumitalic"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>