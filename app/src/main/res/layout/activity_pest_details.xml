<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/semi_white"
    tools:context=".PestDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/green"
            android:elevation="4dp"
            app:title=""
            app:contentInsetStart="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_back_final"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins__medium"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:paddingTop="10dp"
               android:orientation="vertical">

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="250dp"
                   app:cardBackgroundColor="@color/light_gray"
                   app:cardCornerRadius="15dp"
                   android:layout_marginTop="15dp"
                   app:cardElevation="4dp">

                   <ImageView
                       android:id="@+id/ivPestImage"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/loading_image"
                       android:scaleType="centerCrop"/>

               </androidx.cardview.widget.CardView>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="30dp">

                   <TextView
                       android:id="@+id/tvPestName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="#####"
                       android:textSize="20sp"
                       android:fontFamily="@font/poppins__semibold"
                       android:layout_alignParentStart="true"
                       android:textColor="@color/green"/>

                   <TextView
                       android:id="@+id/tvSciName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="#####"
                       android:textSize="16sp"
                       android:fontFamily="@font/poppins__medium"
                       android:layout_alignParentEnd="true"
                       android:textColor="@color/green"/>

               </RelativeLayout>

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardBackgroundColor="@color/light_gray"
                   app:cardCornerRadius="15dp"
                   android:layout_marginTop="15dp"
                   app:cardElevation="4dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="10dp"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Description"
                           android:textSize="16sp"
                           android:fontFamily="@font/poppins__semibold"
                           android:textColor="@color/green"/>

                       <TextView
                           android:id="@+id/tvDescription"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Description"
                           android:textSize="15sp"
                           android:fontFamily="@font/poppins__medium"
                           android:textColor="@color/dark_gray"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Symtomps"
                           android:textSize="16sp"
                           android:fontFamily="@font/poppins__semibold"
                           android:textColor="@color/green"/>

                       <TextView
                           android:id="@+id/tvSymtomps"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Symptomps"
                           android:textSize="15sp"
                           android:fontFamily="@font/poppins__medium"
                           android:textColor="@color/dark_gray"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Cause"
                           android:textSize="16sp"
                           android:fontFamily="@font/poppins__semibold"
                           android:textColor="@color/green"/>

                       <TextView
                           android:id="@+id/tvCause"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Cause"
                           android:textSize="15sp"
                           android:fontFamily="@font/poppins__medium"
                           android:textColor="@color/dark_gray"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Treatments"
                           android:textSize="16sp"
                           android:fontFamily="@font/poppins__semibold"
                           android:textColor="@color/green"/>

                       <TextView
                           android:id="@+id/tvTreatments"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Treatments"
                           android:textSize="15sp"
                           android:fontFamily="@font/poppins__medium"
                           android:textColor="@color/dark_gray"/>

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

           </LinearLayout>
       </ScrollView>

    </LinearLayout>
</FrameLayout>