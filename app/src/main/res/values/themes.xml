<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PalaYan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/green</item>

        <item name="android:statusBarColor">@color/green</item>

    </style>

    <style name="CustomChipTextAppearance" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins__medium</item>
    </style>


    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins__medium</item>
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins__medium</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:contentInsetStart">16dp</item>
        <item name="android:contentInsetLeft">16dp</item>
        <item name="android:contentInsetStartWithNavigation">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>


    <!-- Custom style for SearchView -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Change the text color for the query -->
        <item name="android:textColor">@color/black</item>
        <!-- Change the hint text color -->
        <item name="android:textColorHint">@color/black</item>
        <!-- Change the search icon color -->
        <item name="closeIconTint">@color/green</item>

    </style>

    <style name="InputLabel">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:fontFamily">@font/poppins__medium</item>
    </style>

    <style name="CustomInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:fontFamily">@font/poppins__medium</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CustomInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="boxStrokeColor">@android:color/white</item>
    </style>



    <style name="Theme.PalaYan" parent="Base.Theme.PalaYan" />
</resources>